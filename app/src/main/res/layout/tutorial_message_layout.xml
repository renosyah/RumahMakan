<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/black_transparent"
    android:layout_height="match_parent"
    android:elevation="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tutorial_message_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@string/light_font"
            android:gravity="center"
            android:text="@string/tutorial_swipe"
            android:textAlignment="center"
            android:textColor="@color/textColorWhite"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_close_tutorial"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:fontFamily="@string/light_font"
            android:minHeight="50dp"
            android:layout_marginTop="20dp"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:text="@string/close"
            android:textAllCaps="false"
            android:textColor="@color/textColorWhite"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>