<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.splashActivity.SplashActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/food_1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/blur_half" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/medium_font"
                android:textStyle="bold"
                android:text="@string/restaurant_near_me_text"
                android:textColor="@color/textColorGray"
                android:textSize="32sp" />

            <Button
                android:layout_marginTop="30dp"
                android:paddingStart="80dp"
                android:paddingEnd="80dp"
                android:minHeight="50dp"
                android:id="@+id/button_explore"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/explore"
                android:fontFamily="@string/light_font"
                android:textAllCaps="false"
                android:textColor="@color/textColorWhite"
                android:textSize="20sp" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>